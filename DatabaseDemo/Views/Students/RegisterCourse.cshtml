@model DatabaseDemo.Models.FKStuCourse

@{
    ViewBag.Title = "Register";

}

<h2>Register Course</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(i => i.CourseId)
        @Html.DropDownListFor(i => i.CourseId, ViewBag.Courses as SelectList, new {@class="form-control"})
        @Html.ValidationMessageFor(i => i.CourseId)
    </div>
    <div class="form-group">
        <button class="btn btn-default" type="submit">Register</button>
    </div>
}
